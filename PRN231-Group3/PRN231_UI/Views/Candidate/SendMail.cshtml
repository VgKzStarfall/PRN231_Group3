    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Send Mail</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
            </h6>
